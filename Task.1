
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns


df = pd.read_csv('C:/Users/HP/OneDrive/Documents/iris.csv')


print("First 5 rows of the dataset:")
print(df.head())


print("\nDataset Info:")
print(df.info())

print("\nSummary Statistics:")
print(df.describe())


print("\nMissing Values:")
print(df.isnull().sum())


print("\nClass Distribution:")
print(df['Species'].value_counts())


plt.figure(figsize=(12, 8))
df.hist(bins=20, figsize=(10, 8), layout=(3, 2), color='skyblue', edgecolor='black')
plt.suptitle('Histograms of each feature')
plt.tight_layout()
plt.show()



sns.pairplot(df, hue='Species', palette='Set1')
plt.suptitle('Pairwise Scatter Plots', y=1.02)
plt.show()


plt.figure(figsize=(12, 8))
sns.boxplot(data=df.iloc[:, 1:], orient='h', palette='Set2')
plt.title('Boxplots of each feature to detect outliers')
plt.show()


correlation = df.iloc[:, 1:-1].corr()
plt.figure(figsize=(8, 6))
sns.heatmap(correlation, annot=True, cmap='coolwarm', square=True)
plt.title('Feature Correlation Heatmap')
plt.show()
